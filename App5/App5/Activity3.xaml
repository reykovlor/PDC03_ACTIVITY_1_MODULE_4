<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App5.Activity3">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Color x:Key="RedColor">#FF0000</Color>
        </ResourceDictionary>
    </ContentPage.Resources>
    <ContentPage.Content>
        <StackLayout>
            <ListView x:Name="EmployeeView" ItemsSource="{Binding Employees}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ImageCell ImageSource="{Binding Image}" Text="{Binding DisplayName}" TextColor="Black"
                      Detail="{Binding Position}"
                      DetailColor="{StaticResource RedColor}">
                            <ImageCell.ContextActions>
                                <MenuItem Text="Delete"/>
                                <MenuItem Text="MORE"/>
                            </ImageCell.ContextActions>
                        </ImageCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
